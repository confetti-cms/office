{
  environments: [
    {
      // Key is just a name for the environment
      key: 'dev',
      // Stage is used to determine which code (target) in the Dockerfile to run
      // For now, we support 'development' and 'production'
      stage: 'development',
      options: {
        when_no_data_is_saved_show_fake_data: true,
      },
      containers: [
        // Main view service
        {
          name: 'confetti-cms/view-php',
          hosts: [
            '__HOST__',
          ],
          paths: [
            '/',
          ],
        },
        // For all other services
        {
          hosts: [
            '__HOST__',
          ],
          paths: [
            '/conf_api',
          ],
          user_service_in_uri: true,
        },
      ],
    },
  ],
}
